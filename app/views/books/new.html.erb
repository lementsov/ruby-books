<h1>Нова книга:</h1>

<%= form_with model: @book do |form|%>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title  %>
        <% @book.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :author %><br>
        <%= form.text_field :author  %>
        <% @book.errors.full_messages_for(:author).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :year %><br>
        <%= form.text_field :year  %>
        <% @book.errors.full_messages_for(:year).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :descriptios %><br>
        <%= form.text_field :descriptios  %>
        <% @book.errors.full_messages_for(:descriptios).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :price %><br>
        <%= form.text_field :price  %>
        <% @book.errors.full_messages_for(:price).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>